<p id="notice"><%= notice %></p>

<h1>Employees</h1> <br>

<table class="table table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Document Type</th>
      <th>Document</th>
      <th>Contract Type</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.name, employee %></td>
        <td><%= employee.type_document %></td>
        <td><%= employee.document %></td>
        <td><%= employee.type_contract %></td>
        <td><%= link_to '', edit_employee_path(employee), class: 'btn btn-outline-primary fas fa-edit fa-sm', title: "Edit" %></td>
        <td><%= link_to '', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger fas fa-trash-alt fa-sm', title: "Delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    
<br>
<%= link_to '', new_employee_path, class: 'btn btn-outline-success fa fa-plus', title: "New Employe" %>
