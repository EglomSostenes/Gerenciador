<p id="notice"><%= notice %></p>

<h1>Alliances</h1>

<table class="table table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Institution</th>
      <th>Company</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @alliances.each do |alliance| %>
      <tr>
        <td><%= link_to alliance.start_date, alliance %></td>
        <td><%= alliance.end_date %></td>
        <td><%= alliance.institution.name %></td>
        <td><%= alliance.company.name %></td>
        <td><%= link_to '', edit_alliance_path(alliance), class: 'btn btn-outline-primary fas fa-edit fa-sm', title: "Edit" %></td>
        <td><%= link_to '', alliance, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger fas fa-trash-alt fa-sm', title: "Delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    
<br>
<%= link_to '', new_alliance_path, class: 'btn btn-outline-success fa fa-plus', title: "New Alliance" %>