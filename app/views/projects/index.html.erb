<p id="notice"><%= notice %></p>

<h1>Projects</h1> <br>

<form>
  <div style="text-align: right">
      <%= search_form_for @q, remote: true do |f| %>
          <div style="display: inline-block">
              <%= f.search_field :name_cont,  class: "form-control", 
              placeholder: "Name",
              title: "Name" %>
          </div>
          <div style="display: inline-block">
              <%= f.search_field :alliance_institution_name_cont,  class: "form-control", 
              placeholder: "Institution",
              title: "Institution Name" %>
          </div>
          <div style="display: inline-block">
              <%= f.search_field :alliance_company_name_cont,  class: "form-control", 
              placeholder: "Company",
              title: "Company Name" %>
          </div>
          <div style="display: inline-block">
            <%= f.submit "Search", class: "btn btn-primary" %>
          </div> 
      <% end %>
  </div>
</form> <br>

<table class="table table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Justification</th>
      <th>Goals</th>
      <th>Cost</th>
      <th>Alliance</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= project.justification %></td>
        <td><%= project.goals %></td>
        <td><%= project.cost %></td>
        <td><%= project.alliance %></td>
        <td><%= link_to '', edit_project_path(project), class: 'btn btn-outline-primary fas fa-edit fa-sm', title: "Edit" %></td>
        <td><%= link_to '', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger fas fa-trash-alt fa-sm', title: "Delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    
<br>
<%= link_to '', new_project_path, class: 'btn btn-outline-success fa fa-plus', title: "New Institution" %>
