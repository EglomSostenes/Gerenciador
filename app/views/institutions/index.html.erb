<p id="notice"><%= notice %></p>

<h1>Institutions</h1> <br>

<table class="table table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Document Type</th>
      <th>Document</th>
      <th>Coverage</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= link_to institution.name, institution %></td>
        <td><%= institution.type_document %></td>
        <td><%= institution.document %></td>
        <td><%= institution.coverage %></td>
        <td><%= link_to '', edit_institution_path(institution), class: 'btn btn-outline-primary fas fa-edit fa-sm', title: "Edit" %></td>
        <td><%= link_to '', institution, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger fas fa-trash-alt fa-sm', title: "Delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    
<br>
<%= link_to '', new_institution_path, class: 'btn btn-outline-success fa fa-plus', title: "New Institution" %>
