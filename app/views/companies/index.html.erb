<p id="notice"><%= notice %></p>

<h1>Companies</h1> <br>

<table class="table table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Document Type</th>
      <th>Document</th>
      <th>Cnae</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.type_document %></td>
        <td><%= company.document %></td>
        <td><%= company.cnae %></td>
        <td><%= link_to '', edit_company_path(company), class: 'btn btn-outline-primary fas fa-edit fa-sm', title: "Edit" %></td>
        <td><%= link_to '', company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger fas fa-trash-alt fa-sm', title: "Delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    
<br>
<%= link_to '', new_company_path, class: 'btn btn-outline-success fa fa-plus', title: "New Company" %>
